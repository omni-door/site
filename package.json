{
  "name": "omni-door-site",
  "version": "0.1.0",
  "scripts": {
    "dev": "omni dev",
    "start": "omni start",
    "lint": "npm run lint:prettier && npm run lint:es && npm run lint:style",
    "lint:fix": "npm run lint:prettier_fix && npm run lint:es_fix && npm run lint:style_fix",
    "lint:es": "eslint --ext .ts --ext .tsx src/ pages/",
    "lint:es_fix": "eslint --ext .ts --ext .tsx --fix src/ pages/",
    "lint:prettier": "prettier --check src/ pages/",
    "lint:prettier_fix": "prettier --write src/ pages/",
    "lint:style": "stylelint src/**/*.{css,less,scss,sass} --allow-empty-input",
    "lint:style_fix": "stylelint src/**/*.{css,less,scss,sass} --fix --allow-empty-input",
    "lint:commit": "commitlint -e $HUSKY_GIT_PARAMS",
    "new": "omni new",
    "build": "omni build",
    "release": "omni build && omni release && npm run deploy",
    "setup": "pm2 deploy ecosystem.config.js production setup",
    "deploy": "pm2 deploy ecosystem.config.js production",
    "reload": "pm2 reload ecosystem.config.js production"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint",
      "commit-msg": "npm run lint:commit"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npm run lint:es_fix",
      "npm run lint:prettier_fix"
    ],
    "src/**/*.{css,scss,sass,less}": [
      "npm run lint:style_fix",
      "npm run lint:prettier_fix"
    ]
  },
  "dependencies": {
    "@koa/cors": "~4.0.0",
    "@mdx-js/loader": "^3.0.0",
    "@next/mdx": "^12.3.4",
    "antd": "^5.12.2",
    "classnames": "^2.3.2",
    "koa": "~2.13.4",
    "koa-bodyparser": "~4.3.0",
    "koa-router": "~12.0.1",
    "koa-static": "~5.0.0",
    "koa2-connect": "~1.0.2",
    "next": "~12.1.6",
    "next-url-prettifier": "1.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webpack-merge": "~5.8.0"
  },
  "devDependencies": {
    "@babel/core": "~7.10.5",
    "@babel/plugin-proposal-decorators": "~7.10.5",
    "@commitlint/cli": "8.3.5",
    "@next/bundle-analyzer": "~12.1.6",
    "@omni-door/cli": "~2.8.2",
    "@types/node": "~14.0.27",
    "@types/react": "~18.0.38",
    "@types/react-dom": "~18.0.11",
    "@types/vfile-message": "1.0.1",
    "@typescript-eslint/eslint-plugin": "~4.28.5",
    "@typescript-eslint/parser": "~4.28.5",
    "cross-env": "~7.0.3",
    "del": "5.1.0",
    "detect-port": "1.3.0",
    "eslint": "~7.30.0",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-prettier": "~3.4.1",
    "eslint-plugin-react": "~7.24.0",
    "http-proxy-middleware": "0.20.0",
    "husky": "4.2.5",
    "ip": "1.1.5",
    "less": "~4.1.3",
    "less-loader": "~11.0.0",
    "less-vars-to-js": "^1.3.0",
    "lint-staged": "10.2.11",
    "next-compose-plugins": "~2.2.1",
    "next-transpile-modules": "~4.0.3",
    "next-with-less": "~2.0.5",
    "open": "7.1.0",
    "pm2": "^5.3.0",
    "postcss-px-to-viewport": "1.1.1",
    "prettier": "~2.3.2",
    "sass": "~1.54.9",
    "stylelint": "13.13.1",
    "stylelint-config-css-modules": "2.3.0",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-standard": "20.0.0",
    "stylelint-declaration-block-no-ignored-properties": "2.3.0",
    "stylelint-order": "4.1.0",
    "stylelint-scss": "3.21.0",
    "ts-node": "8.10.2",
    "typescript": "~4.9.5"
  },
  "eslintConfig": {
    "extends": "./configs/.eslintrc.js"
  },
  "prettier": "./configs/prettier.config.js",
  "stylelint": {
    "extends": "./configs/stylelint.config.js"
  },
  "commitlint": {
    "extends": [
      "./configs/commitlint.config.js"
    ]
  },
  "omni": {
    "filePath": "./configs/omni.config.js"
  }
}
